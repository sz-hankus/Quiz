<Window x:Class="QuizSolver.PasswordInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizSolver"
        mc:Ignorable="d"
        Title="PasswordInput" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"></RowDefinition>
            <RowDefinition Height="40*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="20"  Text="Password:" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <PasswordBox Grid.Row="1" FontSize="20" Width="150" PasswordChar="*" PasswordChanged="PasswordBox_PasswordChanged" VerticalAlignment="Center" HorizontalAlignment="Center"></PasswordBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Confirm" Click="ConfirmButton_Click" Height="20" Margin="5"></Button>
            <Button Content="Cancel" Click="CancelButton_Click" Height="20" Margin="5"></Button>
        </StackPanel>
    </Grid>
</Window>
